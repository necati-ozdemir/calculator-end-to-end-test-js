pipeline {
    agent {
        docker {
                   image 'pdmlab/jenkins-node-docker-agent:6.11.1'
                   args '-v /var/run/docker.sock:/var/run/docker.sock'
               }
    }

    tools {
        nodejs "NodeJS"
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: '3'))
    }

//    environment {
//
//        PATH = "$PATH:${dockerHome}/bin"
    //   }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Get dependencies') {
            steps {
                sh 'npm install'
                sh "docker-compose up -d"
            }
        }
        stage('Execute') {
            steps {

                sh 'npm run upAndOpen'
                sh 'npm run compose-down'

            }
        }
    }

    // post {
    // always {
    //  junit keepLongStdio: true, testResults: 'test-results/*.xml', allowEmptyResults: true
    // archiveArtifacts artifacts: 'cypress/videos/**/*.mp4', onlyIfSuccessful: false
    //}
    //}
}
