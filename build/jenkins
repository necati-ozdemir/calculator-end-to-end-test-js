pipeline {
    agent {
        docker {
                   image 'node:14-alpine'
                 //  image 'mbarkin26/addition-service:latest'
               }
    }

    tools {
        nodejs "NodeJS"
    }

    options {
        buildDiscarder(logRotator(numToKeepStr: '3'))
    }

//    environment {
//
//        PATH = "$PATH:${dockerHome}/bin"
    //   }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Get dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Execute') {
            steps {
                sh 'npm run upAndOpen'
            }
        }
    }

    // post {
